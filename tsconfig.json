{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",   
    "allowJs": true,
    "lib": ["ES6"],           
    "removeComments": true,    
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
